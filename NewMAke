cmake_minimum_required(VERSION 3.10)
project(YourProject C)

# Set C standard
set(CMAKE_C_STANDARD 99)

# Raylib setup
set(RAYLIB_DIR "path/to/raylib")
include_directories(${RAYLIB_DIR}/src)
link_directories(${RAYLIB_DIR}/src)

# Bullet Physics setup
set(BULLET_DIR "path/to/bullet")
include_directories(${BULLET_DIR}/src)
link_directories(${BULLET_DIR}/lib)

# Source files
set(SOURCES
    main.c
    # Add other source files here
)

# Executable
add_executable(YourProject ${SOURCES})

# Link libraries
target_link_libraries(YourProject raylib BulletDynamics BulletCollision LinearMath)